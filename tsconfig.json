{
    "compilerOptions": {
        // Enable latest features
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "lib": ["es5", "es2015", "es2016", "dom", "esnext"],
        "target": "es6",
        "types": ["node"],
        "module": "es2015",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "allowJs": true,
        "sourceMap": true,
        // Bundler mode
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "outDir": "dist/esm",
        // Best practices
        "strict": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"]
}
